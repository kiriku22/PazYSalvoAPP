@{
}

<div class="container">
    <h2>Administrador de Personas</h2>
    <p class="descripcion">
        Este administrador nos permite visualizar y gestionar todo lo referente a las personas del negocio.
    </p>

    <div class="opciones-container">
        <a class="btn btn-primary btn-sm" id="btnVerPersonas">Ver Personas</a>
        <a class="btn btn-success btn-sm visually-hidden" id="btnNuevoPersona">Nueva Persona</a>
    </div>

    <div id="tblListaDePersonas">
    </div>
</div>

@*MODAL*@
<div class="modal-container">
    <div class="modal" id="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="tituloModal"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" id="frmModalEstado">
                    <div class="modal-body">

                        <div class="form-group">

                            <input type="hidden" class="form-control" id="IdValor">
                        </div>

                        <div class="form-group">
                            <label for="PersonaValor">Nombre</label>
                            <input type="text" class="form-control" id="PersonaValor">
                        </div>

                        <div class="form-group">
                            <label for="PersonaValor">Telefono</label>
                            <input type="text" class="form-control" id="PersonaValor">
                        </div>
                    <div class="form-group">
                            <label for="PersonaValor">CorreoElectronico</label>
                            <input type="text" class="form-control" id="PersonaValor">
                        </div>
                        <div class="form-group">
                            <label for="PersonaValor">DocumentoIdentificacion</label>
                            <input type="text" class="form-control" id="PersonaValor">
                        </div>
                        

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary" id="btnActualizarPersona">Agregar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
@*FIN MODAL*@


@section Scripts {
    <script>
        $(document).ready(function () {
            
            // btnVerEstados
            $("#btnVerPersona").click(async function () {
                const url = "@Url.Action("ListarPersonas", "Persona")";
                const response = await $.ajax({
                    url: url,
                    method: "GET",
                    dataType: "html"
                });

                $("#tblListaDeEstados").html(response);
                $("#btnVerPersonas").hide();
                $("#btnNuevoPersona").removeClass("visually-hidden"); // visually-hidden

            });

            // mostrar modal nuevo estado
            $("#btnNuevoPersona").click(function () {
                mostrarModal();


            });

        });

        function mostrarModal() {

            // Actualiza el título de la modal
            $("#tituloModal").text("Persona");

            // Limpia los campos del formulario
            $("#frmModalPersona").trigger("reset");

            // Muestra la modal
            $("#modal").modal("show");

        }
    </script>
}